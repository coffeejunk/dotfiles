# Customize to your needs...
LATEX=/usr/texbin
X11=/usr/X11/bin
export CLASSPATH=$CLASSPATH:/usr/local/Cellar/clojure-contrib/1.2.0/clojure-contrib.jar
# export JAVACMD=drip
# export DYLD_LIBRARY_PATH=/usr/local/share/instaclient
export GOROOT=$HOME/code/github/go
export PATH=$PATH:$GOROOT/bin
export GOPATH=$HOME/code/go
export PATH=$PATH:$GOPATH/bin

# putting it all together
export PYTHONPATH=/usr/local/lib/python2.7/site-packages:$PYTHONPATH
export NODE_PATH=/usr/local/share/npm/bin
export PATH=/usr/local/bin:/usr/local/sbin:/usr/bin:/usr/sbin:/sbin:$PATH
export PATH=$PATH:$LATEX:$X11:~/dotfiles/bin
export PATH="${PATH}:${NODE_PATH}"
# export PATH="/Users/max/.tmuxifier/bin:$PATH"
export PATH=$PATH:/Users/max/code/clojurescript/bin

export PATH=$PATH:/Users/max/code/Work/propertybase-utils/bin

# export CFLAGS="-march=native -O2"
export CFLAGS="-march=nocona -O2 -pipe"
export EDITOR="mvim"
bindkey -e

# history
HISTFILE=$HOME/.zsh_history
HISTSIZE=10000
SAVEHIST=10000
setopt hist_ignore_dups
setopt share_history
setopt hist_expire_dups_first
setopt hist_ignore_space

# eval "$(tmuxifier init -)"

# key bindings
bindkey '^[^[[D' backward-word
bindkey '^[^[[C' forward-word
bindkey '^[[5D' beginning-of-line
bindkey '^[[5C' end-of-line
bindkey '^[[3~' delete-char
bindkey '^[^N' newtab
bindkey '^?' backward-delete-char
bindkey '^r' history-incremental-search-backward
# up and down search in history
bindkey '^[[A' up-line-or-search
bindkey '^[[B' down-line-or-search

# select word style
autoload -U select-word-style
select-word-style bash

# load theme
source ~/.zsh/theme.zsh

# load aliases
source ~/.zsh/aliases.zsh

if [ -e ~/.zsh/work ]; then
  for i in `ls ~/.zsh/work`; do
    source ~/.zsh/work/$i
  done
fi

if which rbenv > /dev/null; then eval "$(rbenv init -)"; fi
