                           \ 'active_filetypes': ['ruby', 'coffee', 'sass',
                           \ 'eruby', 'haml', 'javascript', 'html'],
                           \ 'passive_filetypes': ['puppet'] }

" ctrl+p ignore settings
set wildignore+=*/tmp/*,*.so,*.swp,*.zip,*.sass-cache/*,*.DS_Store
