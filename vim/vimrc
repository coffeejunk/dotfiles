" keep at least 3 lines around the cursor
set scrolloff=3

"""""""""""""""""""""""""""""""""""""""""""
" MAPPINGS & SHORTCUTS
"""""""""""""""""""""""""""""""""""""""""""

" clear search
map <leader><space> :noh<cr>

" use ack
nnoremap <leader>a :Ack

" makes ,w split windows vertically
nnoremap <leader>w <C-w>v<C-w>l

" reselect pasted text
nnoremap <leader>v V`]

" open vimrc
nmap <leader>v :tabedit $MYVIMRC<CR>

" reformat current paragraph
map <leader>l gqip

" remove trailing whitespace
nnoremap <silent> <F6> :let _s=@/<Bar>:%s/\s\+$//e<Bar>:let @/=_s<Bar>:nohl<CR>

" spell checking
nmap <silent> <leader>s :set spell!<CR>
" Set region to American English
set spelllang=en_us

"Works in normal mode, must press Esc first"
:map <M-s> :w<kEnter>
"Works in insert mode, saves and puts back in insert mode"
:imap <M-s> <Esc>:w<kEnter>i

nmap <leader>0 %!python -m json.tool<CR>

nmap <leader>o :set paste!<CR>

nmap <C-n> :bnext<CR>
nmap <C-p> :bprev<CR>

